{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/admin",
      "dest": "/index.html"
    },
    {
      "src": "/admin/(.*)",
      "dest": "/index.html"
    },
    {
      "src": "/sales", 
      "dest": "/index.html"
    },
    {
      "src": "/sales/(.*)",
      "dest": "/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/.*",
      "headers": [
        {
          "key": "X-YesSales-Domain",
          "value": "true"
        }
      ]
    }
  ],
  "buildCommand": "cd frontend && chmod +x build-vercel.sh && ./build-vercel.sh",
  "devCommand": "cd frontend && npm run dev:h5",
  "installCommand": "cd frontend && npm ci --legacy-peer-deps",
  "framework": null
}